<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultViewStyle">
        <item name="android:background">@drawable/shape_default_view</item>
        <item name="android:paddingHorizontal" >32dp</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:fontFamily">@font/proxima_nova</item>
    </style>

    <style name="BaseTextStyle.Light">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseTextStyle.Dark">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DrawerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>


</resources>